<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#07080D">


    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:endColor="@color/lightbackground"
                android:startColor="@color/lightbackground"
                android:type="linear" />
            <corners android:radius="20dp" />
            <stroke android:width="0.01dp" android:color="@color/transparentBlack"/>

        </shape>
    </item>

</ripple>