<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration.Register">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/appBar"
        android:orientation="vertical"
        android:layout_height="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/menu_dot"
            android:clickable="true"
            android:paddingHorizontal="10dp"
            android:layout_centerInParent="true"
            android:focusable="true"
            android:background="@drawable/image_ripple"
            android:layout_alignParentRight="true"
            android:layout_height="45dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:textColor="@color/textHighlight"
            android:text="Loading . . ."
            android:layout_height="match_parent"/>
    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/appBar"
        android:id="@+id/mainContent"
        android:scrollbars="none"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:text="Create new"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="Wallet"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_curved"
            android:layout_marginBottom="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="Name"
                android:id="@+id/name"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_curved"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:layout_margin="15dp"
                android:background="@drawable/edit_text_curved"
                android:layout_height="match_parent"
                android:src="@drawable/person" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_curved"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="phone Number"
                android:id="@+id/phoneNumber"
                android:focusable="false"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_curved"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="14dp"
                android:background="@drawable/edit_text_curved"
                android:layout_height="match_parent"
                android:src="@drawable/call" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_curved"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@drawable/edit_text_curved"
                android:hint="Email"
                android:paddingLeft="30dp"
                android:singleLine="true" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_text_curved"
                android:layout_height="match_parent"
                android:src="@drawable/mail" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_curved"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="Password"
                android:id="@+id/password"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_curved"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:paddingRight="2dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_text_curved"
                android:layout_height="match_parent"
                android:src="@drawable/lock" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text_curved"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="Confirm Password"
                android:id="@+id/confirmPassword"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:background="@drawable/edit_text_curved"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:paddingRight="2dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/edit_text_curved"
                android:layout_height="match_parent"
                android:src="@drawable/lock" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/done"
            android:background="@drawable/button_ripple_curved"
            android:text="Done"
            android:layout_marginBottom="20dp"
            android:translationZ="10dp"
            android:layout_height="51dp"/>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>