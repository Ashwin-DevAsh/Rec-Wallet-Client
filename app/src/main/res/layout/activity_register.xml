<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration.Register">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/colorPrimary"
        android:layout_height="match_parent">
        <com.agrawalsuneet.dotsloader.loaders.TashieLoader
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:tashieloader_animDelay="100"
            app:tashieloader_animDur="500"
            app:tashieloader_dotsColor="@color/highlightButton"
            app:tashieloader_dotsDist="5dp"
            app:tashieloader_dotsRadius="10dp"
            app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
            app:tashieloader_noOfDots="4" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/mainContent"
        android:scrollbars="none"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="15dp"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:layout_height="150dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"

                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:textSize="45dp"
                    android:text="Create new"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:textColor="@android:color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:text="Wallet"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginBottom="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="Name"
                android:id="@+id/name"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:inputType="text"
                android:background="@android:color/transparent"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:padding="15dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:src="@drawable/person" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="phone Number"
                android:id="@+id/phoneNumber"
                android:focusable="false"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:padding="15dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:src="@drawable/call" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="15"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:singleLine="true" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:padding="11dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:src="@drawable/mail" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="Password"
                android:id="@+id/password"
                android:layout_weight="15"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="@android:color/transparent"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:padding="10dp"
                android:paddingRight="2dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:src="@drawable/lock" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/edit_text"
            android:layout_marginVertical="12dp"
            android:weightSum="100"
            android:layout_gravity="center"
            android:layout_height="50dp">
            <EditText
                android:hint="Confirm Password"
                android:id="@+id/confirmPassword"
                android:layout_weight="15"
                android:singleLine="true"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="30dp"
                android:layout_height="50dp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="85"
                android:paddingRight="2dp"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:layout_height="match_parent"
                android:src="@drawable/lock" />
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            app:cardCornerRadius="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/done"
                android:background="@drawable/button_ripple"
                android:text="Done"
                android:textColor="@android:color/white"
                android:layout_height="51dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>