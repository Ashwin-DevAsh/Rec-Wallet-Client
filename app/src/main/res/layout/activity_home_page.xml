<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home.HomePage">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/appBar"
        android:layout_height="60dp">

        <ImageView
            android:background="@drawable/image_ripple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="18dp"
            android:src="@drawable/scan"
            android:clickable="true"
            android:layout_marginHorizontal="5dp"
            android:focusable="true"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:background="@drawable/image_ripple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="18dp"
            android:src="@drawable/settings"
            android:clickable="true"
            android:layout_marginHorizontal="5dp"
            android:focusable="true"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_below="@+id/appBar"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="80"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="  Loading..."
                        android:id="@+id/balance"
                        android:textSize="45dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="total balance"
                        android:textColor="@color/textHighlight"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:translationZ="10dp"
                android:weightSum="100"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/home_module"
                android:layout_height="135dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:background="@drawable/home_module_ripple"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:src="@drawable/send_money"
                            android:layout_height="50dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="Send Money"

                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:id="@+id/sendMoney"
                        android:clickable="true"
                        android:background="@drawable/home_module_ripple"
                        android:layout_height="match_parent">

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="1dp"
                    android:background="@color/colorAccent"
                    android:layout_height="100dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:background="@drawable/home_module_ripple"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:src="@drawable/purchase"
                            android:layout_height="50dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="Add Money"

                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:id="@+id/buyMoney"
                        android:clickable="true"
                        android:background="@drawable/home_module_ripple"
                        android:layout_height="match_parent">
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="20dp"
                android:layout_height="40dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Recent Activities"
                    android:gravity="center_vertical"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="22dp"
                    android:layout_height="match_parent"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                 <androidx.recyclerview.widget.RecyclerView
                     android:layout_width="match_parent"
                     android:id="@+id/activity"
                     android:scrollbars="none"
                     android:focusable="false"
                     android:clickable="false"
                     android:paddingTop="5dp"
                     android:isScrollContainer="false"
                     android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent"/>
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/fade"
        android:layout_height="130dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="View more"
            android:layout_marginBottom="15dp"
            android:focusable="true"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="13dp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:translationZ="200dp"
            android:paddingHorizontal="20dp"
            android:background="@drawable/button_ripple_gradient"
            android:id="@+id/allActivities"
            android:layout_centerInParent="true"
            android:layout_height="40dp"/>
    </RelativeLayout>

</RelativeLayout>