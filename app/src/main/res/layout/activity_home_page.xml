<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".Home.HomePage">


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/scroller"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/appBar"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/title"
                    android:gravity="start"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="250dp"
                        android:text="Hii, Uservdjehvxievxhjevxjhevn"
                        android:textStyle="bold"
                        android:id="@+id/greetings"
                        android:textSize="30dp"
                        android:scrollHorizontally="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/textColor"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/balance"
                        android:text="Total balance"
                        android:background="@drawable/balance_bg"
                        android:paddingHorizontal="10dp"
                        android:textSize="12dp"
                        android:paddingVertical="5dp"
                        android:textColor="@color/highlightButton"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="48dp"
                    android:layout_marginTop="21dp"
                    app:cardCornerRadius="24dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_height="48dp">
                    <ImageButton
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:id="@+id/profile"
                        android:background="@android:color/transparent"
                        android:src="@drawable/profile"
                        android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="20"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:translationZ="10dp"
                android:weightSum="100"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/button_ripple_gradient"
                android:layout_height="115dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:background="@drawable/home_module_ripple"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:tint="@android:color/white"
                            android:padding="3dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/pay"
                            android:layout_height="40dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textColor="@android:color/white"
                            android:text="Pay Money"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:id="@+id/sendMoney"
                        android:clickable="true"
                        android:background="@android:color/transparent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_height="80dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="50"
                    android:background="@android:color/transparent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_centerInParent="true"
                        android:background="@drawable/home_module_ripple"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginBottom="10dp"
                            android:layout_width="match_parent"
                            android:padding="3dp"
                            android:tint="@android:color/white"
                            android:background="@android:color/transparent"
                            android:src="@drawable/wallet"
                            android:layout_height="40dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="Add Money"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:focusable="true"
                        android:id="@+id/buyMoney"
                        android:clickable="true"
                        android:background="@android:color/transparent"
                        android:layout_height="match_parent">
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:minHeight="115dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:background="@drawable/container_background"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/merchantHolder"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="10dp"
                    android:background="@drawable/container_background"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/noMerchant"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="40dp"
                        android:src="@drawable/no_merchant"
                        android:layout_height="352.5dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/textDark"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="No Merchants Yet"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </FrameLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:layout_marginHorizontal="15dp"
            android:layout_height="100dp">
            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:background="@android:color/white"
                android:layout_height="match_parent"
                app:slideInterval="5000"
                app:indicatorVisibility="gone"
              />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:background="@drawable/container_background"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/cashBack"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/avatar"
                    android:src="@drawable/offer"
                    android:tint="#90000000"
                    android:padding="10dp"
                    android:foregroundGravity="center"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/avatar"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:paddingVertical="20dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Cashback &amp; Vouchers"

                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="view your scratch, points &amp; offers"
                        android:id="@+id/name"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#20000000"
                    android:layout_marginLeft="70dp"
                    android:layout_height="0.5dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/merchant"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:id="@id/avatar"
                    android:src="@drawable/merchant"
                    android:padding="13.5dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/avatar"
                    android:layout_centerInParent="true"
                    android:paddingVertical="20dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Become a merchant"

                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Get All-in-One-QR instantly &amp; start accepting payments"
                        android:textStyle="bold"
                        android:id="@id/name"
                        android:textSize="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#20000000"
                    android:layout_marginLeft="70dp"
                    android:layout_height="0.5dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/support"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:id="@id/avatar"
                    android:src="@drawable/help"
                    android:layout_marginTop="5dp"
                    android:padding="10.5dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/avatar"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:paddingVertical="20dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Support"

                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Get quick resolution on queries related to R-Pay"
                        android:id="@id/name"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#20000000"
                    android:layout_marginLeft="70dp"
                    android:layout_height="0.5dp"/>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/safety"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="50dp"
                    android:id="@id/avatar"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/safe"
                    android:padding="10dp"
                    android:layout_centerInParent="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_height="50dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@+id/avatar"
                    android:orientation="vertical"
                    android:layout_centerInParent="true"
                    android:paddingVertical="20dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Account Safety Tips"

                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="Learn How to protect yourself from fraud"
                        android:textStyle="bold"
                        android:id="@id/name"
                        android:textSize="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginHorizontal="15dp"
            android:minHeight="115dp"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:background="@drawable/container_background"
                android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/recent"
                        android:visibility="gone"
                        android:nestedScrollingEnabled="false"
                        android:paddingBottom="10dp"
                        android:background="@drawable/container_background"
                        android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/info"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="40dp"
                        android:src="@drawable/mobile_payment"
                        android:layout_height="352.5dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_height="50dp">
                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/pay"
                            android:textColor="@color/textDark"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="No Transactions Yet"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

    </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="20dp"
        android:background="@android:color/transparent"
        android:foreground="@android:color/transparent"
        app:cardBackgroundColor="@android:color/transparent"
        android:id="@+id/scanContainer"

        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="100dp"
            android:text="SCAN"
            android:focusable="true"
            android:clickable="true"
            android:id="@+id/scan"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="13dp"
            android:paddingTop="2dp"
            android:gravity="center"
            android:translationZ="200dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_ripple_gradient"
            />
    </androidx.cardview.widget.CardView>

</RelativeLayout>