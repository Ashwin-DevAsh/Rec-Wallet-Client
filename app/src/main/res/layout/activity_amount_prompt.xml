<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.Transactions.AmountPrompt">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/appBar"
            android:layout_height="60dp">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:textSize="20dp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:layout_height="match_parent"/>
            <ImageView
                android:layout_width="wrap_content"
                android:paddingHorizontal="18dp"
                android:src="@drawable/back"
                android:id="@+id/back"
                android:clickable="true"
                android:layout_marginHorizontal="5dp"
                android:focusable="true"
                android:layout_height="match_parent"/>
        </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:id="@+id/mainContent"
        android:layout_below="@id/appBar"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:singleLine="true"
            android:layout_marginHorizontal="40dp"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:text="Paying Ashwin"
            android:id="@+id/paymentText"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:lineHeight="22.5dp"
            android:gravity="center"
            android:id="@+id/paymentBrief"
            android:text="Your transaction will verify by our server and other nodes"
            android:textColor="@color/textNormal"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="80dp"
            android:weightSum="100"
            android:layout_height="70dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/edit_text"
                android:hint="amount"
                android:id="@+id/amount"
                android:inputType="number"
                android:gravity="center"

                android:layout_height="50dp"/>

        </LinearLayout>


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/nav_view"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="60dp"
        app:cardElevation="10dp"
        android:background="?android:attr/windowBackground"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:translationZ="200dp"
            app:elevation="200dp"
            android:elevation="200dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:orientation="vertical"
                android:translationZ="200dp"
                app:elevation="200dp"
                android:elevation="200dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Cancel"
                        android:gravity="center"
                        android:id="@+id/cancel"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_height="match_parent"/>

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="50"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="30dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginVertical="12dp"
                    android:layout_height="40dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Done"
                        android:id="@+id/done"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:background="@drawable/button_ripple_gradient"
                        android:layout_height="match_parent"/>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>