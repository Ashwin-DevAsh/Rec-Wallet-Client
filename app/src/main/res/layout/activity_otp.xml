<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".Registration.Otp">

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textHighlight"
            android:text="Loading . . ."
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:id="@+id/mainContent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="Verify +91"
            android:id="@+id/topNumber"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Waiting to automatically detect an SMS sent to"
            android:textColor="@color/textNormal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/textNormal"
                    android:id="@+id/verifyNumber"
                    android:text="+91"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:id="@+id/wrongNumber"
                    android:textColor="@color/textHighlight"
                    android:text="Wrong number ?"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="100dp"
            android:weightSum="100"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:maxLength="4"
                android:gravity="center"
                android:id="@+id/otp"
                android:letterSpacing="2"
                android:inputType="number"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="75dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Verify"
                android:gravity="center"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="2dp"
                android:id="@+id/verify"
                android:layout_centerInParent="true"
                android:background="@drawable/button_ripple"
                android:layout_height="50dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>