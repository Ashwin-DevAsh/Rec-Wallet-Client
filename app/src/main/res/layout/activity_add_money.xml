<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".Home.Transactions.AmountPrompt">



    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/appBar"
        android:layout_height="60dp">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:textSize="20dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:clickable="false"
            android:focusable="false"
            android:layout_height="match_parent"/>
        <ImageView
            android:background="@drawable/image_ripple"
            android:layout_width="wrap_content"
            android:paddingHorizontal="18dp"
            android:src="@drawable/back"
            android:id="@+id/back"
            android:clickable="true"
            android:layout_marginHorizontal="5dp"
            android:focusable="true"
            android:layout_height="match_parent"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:id="@+id/mainContent"
        android:layout_below="@id/appBar"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="22dp"
            android:text="Adding Money"
            android:id="@+id/paymentText"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/paymentBrief"
            android:text="Your transaction will verify by our server"
            android:textColor="@color/textNormal" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/textNormal"
                    android:text="by our server"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:id="@+id/learnMore"
                    android:textColor="@color/textHighlight"
                    android:text="Learn more"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="80dp"
            android:weightSum="100"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_marginHorizontal="50dp"
                android:gravity="center"
                android:id="@+id/amount"
                android:hint="Amount"
                android:textSize="20dp"
                android:letterSpacing="0.2"
                android:inputType="number"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="75dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:text="Done"
                android:gravity="center"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="2dp"
                android:id="@+id/done"
                android:layout_centerInParent="true"
                android:background="@drawable/button_ripple"
                android:layout_height="50dp"/>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>