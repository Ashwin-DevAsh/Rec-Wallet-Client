<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    tools:context=".Home.Transactions.AllTransactions">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/mainContent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="150dp">
                <LinearLayout
                    android:layout_centerInParent="true"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="45dp"
                        android:text="Merchant"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="start"

                        android:textColor="@android:color/black"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:text="Store"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                android:background="@drawable/container_background"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/delivery"
                    android:layout_height="70dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@id/avatar"
                        app:tint="@color/highlightButton"
                        android:src="@drawable/org3"
                        android:scaleType="fitXY"
                        android:padding="15dp"
                        android:background="@drawable/image_avatar"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/avatar"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="Make Delivery"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/ios_forward_arrow"
                        android:layout_alignParentRight="true"
                        android:padding="14dp"
                        android:tint="@color/textNormal"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                android:background="@drawable/container_background"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/downloadOrders"
                    android:layout_height="70dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@id/avatar"
                        app:tint="@color/highlightButton"
                        android:src="@drawable/org2"
                        android:scaleType="fitXY"
                        android:padding="15dp"
                        android:background="@drawable/image_avatar"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/avatar"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="My Orders"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/ios_forward_arrow"
                        android:layout_alignParentRight="true"
                        android:padding="14dp"
                        android:tint="@color/textNormal"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                android:background="@drawable/container_background"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/myProducts"
                    android:layout_height="70dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@id/avatar"
                        app:tint="@color/highlightButton"
                        android:src="@drawable/org4"
                        android:scaleType="fitXY"
                        android:padding="15dp"
                        android:background="@drawable/image_avatar"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/avatar"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="My Products"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/ios_forward_arrow"
                        android:layout_alignParentRight="true"
                        android:padding="14dp"
                        android:tint="@color/textNormal"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="@drawable/container_background"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/downloadProducts"
                    android:layout_height="70dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@id/avatar"
                        app:tint="@color/highlightButton"
                        android:src="@drawable/org1"
                        android:scaleType="fitXY"
                        android:padding="15dp"
                        android:background="@drawable/image_avatar"
                        android:layout_centerInParent="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:layout_height="50dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_toRightOf="@+id/avatar"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:gravity="center_vertical"
                            android:text="Download Products"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="50dp"
                        android:src="@drawable/ios_forward_arrow"
                        android:layout_alignParentRight="true"
                        android:padding="14dp"
                        app:tint="@color/textNormal"
                        android:layout_height="match_parent"/>

                </RelativeLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/container_background"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/recentPaymentsContainer"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="wrap_content">


                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/recentPayments"
                        android:nestedScrollingEnabled="false"
                        android:layout_height="wrap_content"

                        android:minHeight="70.5dp"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:id="@+id/viewPayments"
                        android:layout_height="50dp">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/textDark"
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:text="View more"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/noPayments"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:padding="40dp"
                        android:src="@drawable/no_orders"
                        android:layout_height="352.5dp"/>

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"/>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


</RelativeLayout>