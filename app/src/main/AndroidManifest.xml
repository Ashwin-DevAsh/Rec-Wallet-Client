<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.DevAsh.recwallet">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Home.Transactions.PasswordPrompt"
            android:windowSoftInputMode="adjustResize"
            />
        <activity android:name=".Home.Transactions.AmountPrompt" />

        <service
            android:name=".Sync.SocketService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".Home.Transactions.SingleObjectTransaction" />
        <activity
            android:name=".Home.Transactions.SendMoney"
            android:label="@string/title_activity_send_money"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".Home.AllTransactions" />
        <activity
            android:name=".Registration.Register"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Home.HomePage" />
        <activity
            android:name=".Registration.Otp"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Registration.Login"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".fcm.NotificationService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>